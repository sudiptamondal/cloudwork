= form_for @watch_list do |f|
  - if @watch_list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@watch_list.errors.count, "error")} prohibited this watch_list from being saved:"
      %ul
        - @watch_list.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :have_it
    = f.check_box :have_it
  .actions
    = f.submit 'Save'
